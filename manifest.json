{
    "manifest_version": 2,
    "name": "Twitch Helper",
    "version": "0.1.0",
    "description": "Description of your extension",
    "icons": {
        "16": "app/data/images/icon-16.png",
        "32": "app/data/images/icon-32.png",
        "64": "app/data/images/icon-64.png"
    },
    "browser_action": {
        "default_icon": "app/data/images/icon-64.png",
        "default_title": "Your extension title",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/directory/following/live"],
            "js": ["dist/content.js"]
        }
    ],
    "permissions": [],
    "web_accessible_resources": [
        "http://localhost:8080/content.js",
        "http://localhost:8080/background.js"
    ]
}
